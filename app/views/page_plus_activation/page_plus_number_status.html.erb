<div class="container">
	 <h3><%=t(".service_number_status",service: @phone_service)%></h3>
  <br>

	<form accept-charset="UTF-8" action="/page_plus_number_status_submit" method="post" role="form" class="form-horizontal">
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
  <input id="phone_service" type="hidden" name="phone_service" value="<%=@phone_service%>">

  <div class="form-group">
    <%if @correct_number_format%>
      <p class='accesspoint-warning'>
        Sorry, that isn't the correct format.
      </p>
    <%end%>
  </div>
  <div class="form-group">
    <div class='col-sm-6'>
      <label for="name"><%=t("page_plus_activation.phone_number")%>*</label>
      <br>
      <input type="text" name='phone_number' class="form-control">
    </div>

    <div class='col-sm-6'>

    </div>

  </div>

   <div class="checkbox form-group">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-default"><%=t("submit")%></button>
    </div>
  </div>

</form>

</div>