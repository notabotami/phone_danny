
<div class="container accesspoint-form">
  <h3><%=@phone_service%> Refills</h3>
  <br>

<form accept-charset="UTF-8" action="/page_plus_refill_submit" method="post" role="form" class="form-horizontal">
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>

  <div class="form-group">
    <div class="col-sm-12">
      <label for="email">Email*</label>
      <br>
      <span class=<%="accesspoint-warning " + if !@email_warning then " hidden" else "" end%>>
          
      </span>
      <input type="email" name='email' class="form-control" id="email" value="<%=if @params and @params[:email] then  @params[:email]  end%>">
      <span class="accesspoint-warning">
          This is also required<br>
      </span>

      <label for="email-confirmation">Confirm Email*</label>
      <br>
      <input type="email" name='email_confirmation' class="form-control" id="email-confirmation" value="<%=if @params and @params[:email_confirmation] then  @params[:email_confirmation] end%>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">

      <label>Phone*</label>
      <input type="text" size="5" name="phone_number" class="form-control" value="<%=if @params and @params[:phone_number] then @params[:phone_number]  end%>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
    <label for="sel1">Select your Page Plus Monthly Service Plan*</label>
    <select class="form-control" name='payment_plan'>

      <option value="1">$12.00 - 250 mins, 250 text, 10 mb data</option>
      <option value="2">$29.95 - 1500 mins, UNL text, 1 GB data</option>
      <option value="3">$39.95 - UNL mins, UNL text, & UNL data (1.5 GB high speed)</option>
      <option value="4">$55.00 - UNL mins UNL text, & UNL data (5 GB high speed)</option>
      <option value="5">$69.95 - UNL mins, UNL text, & UNL data (7GB high speed)</option>

    </select>
    </div>
  </div>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="PagePlus Refill"
          data-locale="auto"></script>
</form>
<br>

</div>
