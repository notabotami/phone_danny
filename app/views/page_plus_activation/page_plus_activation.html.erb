
<div class="container accesspoint-form">
  
  <h3><%=t(".service_activation",service: @phone_service) %></h3>
  <br>

<form accept-charset="UTF-8" action="/page_plus_activation_submit" method="post" role="form" class="form-horizontal">
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
  <input id="phone_service" type="hidden" name="phone_service" value="<%=@phone_service%>">

  <div class="form-group">
    <div class='col-sm-6'>
      <label for="name"><%=t("page_plus_activation.first_name")%>*</label>
      <br>
      <input type="text" name='first_name' class="form-control" value="<%=if @params and @params[:first_name] then @params[:first_name] end%>">
            <span class="accesspoint-warning">
          This is required
      </span>
    </div>

    <div class='col-sm-6'>
      <label for="name"><%=t("page_plus_activation.last_name")%>*</label>
      <br>

      <input type="text" name='last_name' class="form-control" value="<%=if @params and @params[:last_name] then @params[:last_name] end%>">

      <span class="accesspoint-warning">
          This is required
      </span>
    </div>

  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <label for="email"><%=t("page_plus_activation.email_long")%>*</label>
      <br>
      <span class=<%="accesspoint-warning " + if !@email_warning then " hidden" else "" end%>>
          
      </span>
      <input type="email" name='email' class="form-control" id="email" value="<%=if @params and @params[:email] then @params[:email] end%>">
      <span class="accesspoint-warning">
          This is also required<br>
      </span>

      <label for="email-confirmation"><%=t("page_plus_activation.email_confirmation")%>*</label>
      <br>
      <input type="email" name='email_confirmation' class="form-control" id="email-confirmation" value="<%=if @params and @params[:email_confirmation] then @params[:email_confirmation] end%>">
    </div>
  </div>

    <div class="form-group">
    <div class="col-sm-12">
      <label for="phone-type"><%=t(".activation_question")%>*</label><br>

    <select class="form-control" name='phone_type' id="phone-type">

      <option value="1">3G</option>
      <option value="2">4G LTE</option>
    </select>

      <span class="hidden">
          4G phones REQUIRE a Page Plus 4G LTE SIM card to activate<br>
          Order one <span class='accesspoint-emphasis'>HERE</span> if you don't already have one<br>
          If you already have one, enter it in the "Page Plus Cellular SIM CARD ID" box below
      </span>
    </div>
  </div>

  <div class="form-group accesspoint-3g">
    <div class="col-sm-12">

      <label><%=t(".esn_number")%>*</label>
      <input type="text" name="esn_number" class="form-control" value="<%=if @params and @params[:esn_number] then @params[:esn_number] end%>">
      <span class="accesspoint-warning">
        <br>
        Your ESN or MEID should start with one of the following:<br>
        ????<br>
        ????<br>
        Will be labeled: ESN, MEID, DEC, HEX, MEID HEX, ESN HEX, or MEID DEC
      </span>
    </div>
  </div>

  <div class="form-group accesspoint-4g">
    <div class="col-sm-12">

      <label><%=t(".imei_number")%>*</label>
      <input type="text" name="imei_number" class="form-control" value="<%=if @params and @params[:imei_number] then @params[:imei_number] end%>">
      <span class="accesspoint-warning">
        <br>
        Your IMEI should start with one of the following:<br>
        ????<br>
        ????<br>
        Will be labeled: IMEI
      </span>
    </div>
  </div>

  <div class="form-group accesspoint-4g">
    <div class="col-sm-12">

      <label><%=t(".iccid_number")%>*</label>
      <input type="text" name="iccid_number" class="form-control" value="<%=if @params and @params[:iccid_number] then @params[:iccid_number] end%>">
    </div>
  </div>

  <div class="form-group selectel-only">
    <div class="col-sm-12">

      <label><%=t(".billing_address")%>*</label>
      <input type="text" name="billing_address" class="form-control" value="<%=if @params and @params[:billing_address] then  @params[:billing_address] end%>">
    </div>
  </div>

    <div class="form-group selectel-only">
    <div class="col-sm-12">

      <label><%=t(".billing_city")%>*</label>
      <input type="text" name="billing_city" class="form-control" value="<%=if @params and @params[:billing_city] then  @params[:billing_city] end%>">
    </div>
  </div>

    <div class="form-group selectel-only">
    <div class="col-sm-12">

      <label><%=t(".billing_state")%>*</label>
      <input type="text" name="billing_state" class="form-control" value="<%=if @params and @params[:billing_state] then @params[:billing_state] end%>">
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-12">

      <label><%=t("page_plus_activation.zip_code")%>*</label>
      <input type="text" size="5" name="zip_code" class="form-control" value="<%=if @params and @params[:zip_code] then  @params[:zip_code] end%>">
    </div>
  </div>

  <div class="form-group page-plus-only">
    <div class="col-sm-12">
    <label for="sel1"><%=t("page_plus_activation.page_plus_plan")%>*</label>
    <select class="form-control" name='payment_plan'>

      <option value="1"><%=t("page_plus_activation.page_plus_plan_one")%></option>
      <option value="2"><%=t("page_plus_activation.page_plus_plan_two")%></option>
      <option value="3"><%=t("page_plus_activation.page_plus_plan_three")%></option>
      <option value="4"><%=t("page_plus_activation.page_plus_plan_four")%></option>
      <option value="5"><%=t("page_plus_activation.page_plus_plan_five")%></option>

    </select>
    </div>
  </div>

  <div class="form-group selectel-only">
    <div class="col-sm-12">
    <label for="sel1"><%=t("page_plus_activation.selectel_wireless_plan")%>*</label>
    <select class="form-control" name='payment_plan' id="selectel-payment-plan">

      <option class="3g-only" value="a"><%=t("page_plus_activation.selectel_wireless_plan_one")%></option>
      <option class="4g-only" value="b"><%=t("page_plus_activation.selectel_wireless_plan_two")%></option>
      <option value="c"><%=t("page_plus_activation.selectel_wireless_plan_three")%></option>
      <option value="d"><%=t("page_plus_activation.selectel_wireless_plan_four")%></option>
      <option value="e"><%=t("page_plus_activation.selectel_wireless_plan_five")%></option>
      <option value="f"><%=t("page_plus_activation.selectel_wireless_plan_six")%></option>
      <option class="3g-only" value="g"><%=t("page_plus_activation.selectel_wireless_plan_seven")%></option>
      <option class="4g-only" value="h"><%=t("page_plus_activation.selectel_wireless_plan_eight")%></option>

    </select>
    </div>
  </div>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%=@phone_service%> Activation"
          data-locale="auto"></script>
</form>
<br>

</div>
